########
BREE_DISABLE=true
BREE_JOBS_UPDATE_CHANNELS_CRON='0 23 * * *'

##########
# CRYPTO #
##########
CRYPTO_KEY=

######
# DB #
######
DB_URI=mongodb://localhost:27017/jassbot

