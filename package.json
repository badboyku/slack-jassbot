{
  "name": "jassbot",
  "version": "1.0.0",
  "description": "This is app bot for slack.",
  "author": "badboyku",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badboyku/slack-jassbot.git"
  },
  "bugs": {
    "url": "https://github.com/badboyku/slack-jassbot/issues"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && tsc && tsc-alias",
    "dev": "TS_NODE=true node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./src/index.ts",
    "dev:db": "docker run -it --name jassbot_db -v jassbot_data:/data/db -p 27017:27017 mongo:6.0.2",
    "start": "node -r dotenv/config dist/index.js",
    "clean": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean:coverage": "rimraf ./coverage",
    "lint": "eslint \"./src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"./src/**/*.{js,ts}\" --fix",
    "lint-staged": "lint-staged",
    "scripts:addChannels": "TS_NODE=true node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./src/scripts/addChannels.ts",
    "scripts:addUsers": "TS_NODE=true node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./src/scripts/addUsers.ts",
    "scripts:test": "TS_NODE=true node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./src/scripts/zzz.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/db/models/*.ts",
      "!src/jobs/*.ts",
      "!src/scripts/*.ts"
    ],
    "coverageDirectory": "test_coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1",
      "^@clients/(.*)": "<rootDir>/src/clients/$1",
      "^@clients": "<rootDir>/src/clients",
      "^@controllers/(.*)": "<rootDir>/src/controllers/$1",
      "^@controllers": "<rootDir>/src/controllers",
      "^@db/(.*)": "<rootDir>/src/db/$1",
      "^@db": "<rootDir>/src/db",
      "^@errors/(.*)": "<rootDir>/src/errors/$1",
      "^@errors": "<rootDir>/src/errors",
      "^@listeners/(.*)": "<rootDir>/src/listeners/$1",
      "^@listeners": "<rootDir>/src/listeners",
      "^@services/(.*)": "<rootDir>/src/services/$1",
      "^@services": "<rootDir>/src/services",
      "^@types": "<rootDir>/src/@types/global.d.ts",
      "^@utils/(.*)": "<rootDir>/src/utils/$1",
      "^@utils": "<rootDir>/src/utils",
      "^@views/(.*)": "<rootDir>/src/views/$1",
      "^@views": "<rootDir>/src/views"
    },
    "resetMocks": true,
    "testTimeout": 10000,
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "@ladjs/graceful": "^3.2.2",
    "@slack/bolt": "^3.13.1",
    "bree": "^9.1.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "luxon": "^3.3.0",
    "mongoose": "^7.1.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.1",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.1.4",
    "eslint-config-badboyku": "^1.0.22",
    "eslint-import-resolver-alias": "^1.1.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
