{
  "name": "jassbot",
  "version": "1.0.0",
  "description": "This is app bot for slack.",
  "author": "badboyku",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badboyku/slack-jassbot.git"
  },
  "bugs": {
    "url": "https://github.com/badboyku/slack-jassbot/issues"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && tsc",
    "dev": "TS_NODE=true node -r ts-node/register -r dotenv/config ./src/index.ts",
    "dev:db": "docker run -it --name jassbot_db -v jassbot_data:/data/db -p 27017:27017 mongo:6.0.2",
    "start": "node -r dotenv/config dist/index.js",
    "clean": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean:coverage": "rimraf ./coverage",
    "lint": "eslint \"./src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"./src/**/*.{js,ts}\" --fix",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "test_coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "testTimeout": 10000,
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "dependencies": {
    "@slack/bolt": "^3.12.2",
    "axios": "^1.2.1",
    "dotenv": "^16.0.3",
    "luxon": "^3.1.1",
    "mongoose": "^6.7.5",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.10",
    "eslint-config-badboyku": "^1.0.17",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-watch-typeahead": "^2.2.1",
    "lint-staged": "^13.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
