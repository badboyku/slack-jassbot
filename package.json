{
  "name": "jassbot",
  "version": "1.0.0",
  "description": "This is app bot for slack.",
  "author": "badboyku",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badboyku/slack-jassbot.git"
  },
  "bugs": {
    "url": "https://github.com/badboyku/slack-jassbot/issues"
  },
  "main": "src/index.ts",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && tsc",
    "postinstall": "npm run build",
    "heroku-prebuild": "export NPM_CONFIG_PRODUCTION=false; export NODE_ENV=; NPM_CONFIG_PRODUCTION=false NODE_ENV=development npm install --only=dev --dev",
    "heroku-postbuild": "export NPM_CONFIG_PRODUCTION=true; export NODE_ENV=production;",
    "dev": "TS_NODE=true node -r ts-node/register -r dotenv/config ./src/index.ts",
    "start": "node -r dotenv/config dist/index.js",
    "clean": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean:coverage": "rimraf ./coverage",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" \"./test/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" \"./test/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint-staged": "lint-staged",
    "test": "jest test/",
    "test:coverage": "jest --coverage test/",
    "test:watch": "jest --watch test/"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "test/**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "testMatch": [
      "**/__tests__/**/*.+(ts)",
      "**/?(*.)+(spec|test).+(ts)"
    ],
    "testTimeout": 10000,
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    }
  },
  "dependencies": {
    "@slack/bolt": "^3.12.1",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.7",
    "eslint-config-badboyku": "^1.0.17",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-watch-typeahead": "^2.2.0",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
